<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="3dp" android:left="3dp" android:top="3dp" android:bottom="3dp">
        <shape>
            <!-- Nền nút với gradient màu hiện đại -->
            <gradient
                android:angle="45"
                android:startColor="#4CAF50"
                android:centerColor="#66BB6A"
                android:endColor="#81C784"
                android:type="linear" />

            <corners android:radius="8dp"/>

            <stroke android:color="#388E3C" android:width="2dp" />
        </shape>
    </item>

    <!-- Bóng đổ mềm -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#55000000"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
